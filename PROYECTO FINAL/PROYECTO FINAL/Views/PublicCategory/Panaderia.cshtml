
@{
    ViewBag.Title = "Panaderia";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" ng-controller="ArticuloController">
    <div class="panel panel-info col-md-4" ng-repeat="almacen in data2 track by $index" ng-if="almacen.idcategoria == 9">
        <div class="panel-heading">{{almacen.nombre}}</div>
        <div class="panel-body">
            <div class="thumbnail cajaTienda">
                <img ng-src="/Uploads/{{almacen.imagen}}" class="img-circle prio" alt="Alternate Text" />
                <div class="caption">
                    <h2 class="text-info">{{almacen.descripcion}}</h2>
                    <h2 class="text-aqua">{{almacen.price | currency}}</h2>
                    <p><a href="#" class="btn btn-success">Comprar</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

