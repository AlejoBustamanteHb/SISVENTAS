@model PROYECTO_FINAL.Models.categoria

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Agregar Nueva Categoria</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            <div class="input-group col-md-4">
                <span class="input-group-addon" id="aeer">Nombre de La Categoria</span>
                <input type="text" name="nombre" aria-describedby="aeer" class="form-control" value=" " />
            </div>
        </div>
        <div class="form-group">
            <div class="input-group col-md-4">
                <span class="input-group-addon" id="aeer">Descripción de La Categoria</span>
                <input type="text" name="descripcion" aria-describedby="aeer" class="form-control" value=" " />
            </div>
        </div>

        <div class="input-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<nav aria-label="...">
    <ul class="pager">
        <li class="previous"><a href="/Categoria/Index"><span aria-hidden="true">&larr;</span> Volver</a></li>
    </ul>
</nav>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
